@using Westwind.AspNetCore.Markdown;
@model JsvBlog.Business.ViewModels.PostViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row g-5">
    <div class="col-md-8">
        <article class="blog-post">
            <h2 class="blog-post-title">@Model.Title</h2>
            <p class="blog-post-meta">@Model.PubDate by <a href="#">Jonathan Vieira</a></p>

            <hr>

            @*@Markdown.ParseHtmlStringFromUrl("https://github.com/RickStrahl/Westwind.AspNetCore.Markdown/raw/master/readme.md")*@
            @Markdown.ParseHtmlStringFromUrl(Model.UrlContent)

        </article>

        <nav class="blog-pagination" aria-label="Pagination">
            <a class="btn btn-outline-primary" href="#">Back</a>
            <a class="btn btn-outline-secondary disabled" href="#" tabindex="-1" aria-disabled="true">Next</a>
        </nav>

    </div>

    <div class="col-md-4">
        <div class="position-sticky" style="top: 2rem;">
            <div class="p-4 mb-3 bg-light rounded">
                <img src="https://github.com/github.png" alt="Avatar" class="avatar">
                <h4 class="fst-italic">Jonathan Vieira</h4>
                <p class="mb-0">Customize this section to tell your visitors a little bit about your publication.</p>
            </div>

            <div class="p-4">
                <h4 class="fst-italic">Relevant</h4>
                <ol class="list-unstyled mb-0">
                    <li><a style="color:grey" href="#">Priority Queue</a></li>
                    <li><a style="color:grey" href="#">Implicit Operators in C#</a></li>
                    <li><a style="color:grey" href="#">ASP.NET 5 – Autentication and Autorization with Bearer and JWT</a></li>
                    <li><a style="color:grey" href="#">Clean Code - Guia e Exemplos</a></li>
                    <li><a style="color:grey" href="#">How To Create Docker Image Of .NET 6 Workloads And Push It To Google Container Registry</a></li>
                    <li><a style="color:grey" href="#">Customize Modern SharePoint List Forms using JSON</a></li>
                    <li><a style="color:grey" href="#">Use Of Text Web Part In SharePoint Online</a></li>
                    <li><a style="color:grey" href="#">C# 11- Pattern Matching On Span For Constant String</a></li>
                    <li><a style="color:grey" href="#">Hello World In Fast API Python</a></li>
                    <li><a style="color:grey" href="#">Step By Step Process To Create A Power Platform Solution</a></li>
                    <li><a style="color:grey" href="#">	Create Generic HttpClient Call Function With Error Handling In C#</a></li>
                </ol>
            </div>

            <div class="p-4">
                <h4 class="fst-italic">Elsewhere</h4>
                <ol class="list-unstyled">
                    <li><a href="#">GitHub</a></li>
                    <li><a href="#">Twitter</a></li>
                    <li><a href="#">Facebook</a></li>
                </ol>
            </div>
        </div>
    </div>
</div>

<footer class="blog-footer">
    @*<p>
    <a href="#" id="up-button">Back to top</a>
    </p>*@

    <div id="up-button" class="transition"><i class="fas fa-chevron-up">^</i></div>
</footer>

